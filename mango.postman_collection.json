            "body": {
              "mode": "raw",
              "raw": "{\n  \"authorId\": \"{{userId}}\",\n  \"authorName\": \"Jane Smith\",\n  \"content\": \"I totally agree!\",\n  \"parentCommentId\": \"{{commentId}}\",\n  \"authorAvatar\": \"https://via.placeholder.com/40\"\n}"
