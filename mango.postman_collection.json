    {
      "name": "Comments",
      "item": [
        {
          "name": "Create Comment on Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"authorId\": \"{{userId}}\",\n  \"authorName\": \"John Doe\",\n  \"content\": \"This profile really resonates with me!\",\n  \"authorAvatar\": \"https://via.placeholder.com/40\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/profiles/{{profileId}}/comments",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "profiles",
                "{{profileId}}",
                "comments"
              ]
            },
            "description": "Create a new top-level comment on a profile"
          },
          "response": []
        },
        {
          "name": "Get Comments on Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/profiles/{{profileId}}/comments?sort=newest&page=1&limit=10",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "profiles",
                "{{profileId}}",
                "comments"
              ],
              "query": [
                {
                  "key": "sort",
                  "value": "newest",
                  "disabled": false
                },
                {
                  "key": "page",
                  "value": "1",
                  "disabled": false
                },
                {
                  "key": "limit",
                  "value": "10",
                  "disabled": false
                }
              ]
            },
            "description": "Get comments on a profile with sorting and pagination. Sort options: newest, oldest, mostVoted, leastVoted"
          },
          "response": []
        },
